<!DOCTYPE html>
<html lang="en">
<%- require('./../layout/head.ejs')() %>
<body>
  <%- require('./../layout/header.ejs')() %>

  <main id="reset">
    <div class="container fifty">
      <div class="row">
         <div class="box">
        <div class="card">
          <div class="card-header">
            <h2>Password Reset</h2>
          </div>
          <div class="card-body">
            <form class="form-horizontal" method="post" action="http://192.168.0.157:3001/reset">
              <input type="hidden" name="_token" value="6MTVfborPGSFoyTjlhVQz0Tubo8X6HGAEhtQdgzl"/>
              <div class="form-group">
                   <label class="col-form-label" for="password">Password</label>
                  <input class="form-control" id="password" type="password" name="password" maxlength="100" required="required" autocomplete="current-password"/>
              </div>
              <div class="form-group">
                  <label class="col-form-label" for="passwordconf">Password Confirmation</label>
                  <input class="form-control" id="passwordconf" type="password" name="passwordconf" value="" maxlength="255" required="required" autocomplete="current-password" autofocus="autofocus"/>
              </div>
              <div class="mt-30">
                  <button class="btn btn-secondary" type="submit">Reset password</button>
                </div>
              </div>

            </form>
          </div>
        </div>
      </div>
      </div>
    </div>
  </main>

  <%- require('./../layout/footer.ejs')() %>
</body>
</html>
