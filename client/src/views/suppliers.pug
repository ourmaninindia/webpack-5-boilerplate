extends layout

block title
  title TIM - Suppliers

block content

  +menu('suppliers')    

  main#suppliers
    .container.mw-1200
      div.subcontainer
        .flexrow.nowrap.header
            h2.title-header Suppliers
            .create-button
              a.create-button(tabindex="0" role="button" href="/cities/create")
                button.btn.btn-grey( type="button") Create Supplier
        .flexrow.search-bar
          div
          div.field 
            a#hotels(href="#") Hotels 
          div.field 
            a#agents(href="#") Agents 
          .field.search 
            button.search(tabindex='0' type='button')
              span.search
                svg.search(focusable='false' viewbox='0 0 24 24' aria-hidden='true' role='presentation')
                  path(d='M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z')
                  path(fill='none' d='M0 0h24v24H0z')
            input.search(type="text" placeholder='Search' data-table="suppliers" data-count="#count" role='searchbox' aria-label="Filter" aria-describedby="filter")
            span#count 
          .dropdown
              button#settings.btn.dropdown-toggle( type="button" data-bs-toggle="dropdown" aria-expanded="false" ) Settings
              ul.dropdown-menu( aria-labelledby="settings" )
                li
                  label
                    input#col1.checkbox( type="checkbox" onblur='settings(1)') 
                    | ID
                li
                  label
                    input#col2.checkbox( type="checkbox" checked onblur='settings(2)') 
                    | Organisation
                li
                  label
                    input#col3.checkbox( type="checkbox" checked onblur='settings(3)') 
                    | City
                li
                  label
                    input#col4.checkbox( type="checkbox" checked onblur='settings(4)') 
                    | Country

        table.suppliers
          colgroup
            col.check
            col#col-1
            col#col-2
            col#col-3
            col#col-4
            col.edit
            col.delete
          thead
            tr
              th
              th ID
              th Organisation
              th City City
              th State/Country
              th(colspan="2")
          tbody#table.table

        .pagination-hide
          .pagination-navigation
            .pagination-navigation-info-section
            .pagination-navigation-button-section
              .pagination-btn.first First
              .pagination-btn.previous Previous
              .pagination-btn.next Next
              .pagination-btn.last Last

block script
 
  script.
    var hotels =!{JSON.stringify(hotels)}
    var agents =!{JSON.stringify(agents)}
  include test.js
  
